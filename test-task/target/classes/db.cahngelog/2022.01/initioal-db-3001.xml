<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="2022-01-30-20-29" author="Artur">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="page"/>
            </not>
        </preConditions>
        <comment>create table "page"</comment>
        <createTable tableName="page">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="url" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="INTEGER" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2022-01-30-20-30" author="Artur">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="word_count"/>
            </not>
        </preConditions>
        <comment>create table "word_cont"</comment>
        <createTable tableName="word_count">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="word" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="count" type="INTEGER" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="INTEGER" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="page_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2022-30-01-20-32" author="Artur">
        <addForeignKeyConstraint baseTableName="page"
                                 baseColumnNames="id"
                                 constraintName="page_count_word_fk"
                                 referencedTableName="word_count"
                                 referencedColumnNames="page_id"/>
    </changeSet>
</databaseChangeLog>
